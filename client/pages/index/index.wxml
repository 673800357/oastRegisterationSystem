<!--index.wxml-->
<view class="container">
    <view class="manner"></view>
    <view class="title">
        <text>光电工程学院科协招新报名</text>
    </view>
    <view>
    <view class="inputitem">   
    <text class="inputinfo" confirm-type="next">学号：</text>
    <input type="text" class="inputs" placeholder="请输入学号" placeholder-class="holder"/>
     </view>

    <view class="inputitem">
    <text class="inputinfo" confirm-type="next">姓名：</text>
    <input type="text" class="inputs" placeholder="请输入姓名" placeholder-class="holder"/>
    </view>

     <view class="pickeritem inputitem">
   <text class="inputinfo">性别：</text>
    <picker class="picker" bindchange="bindPickerChange" value="{{index2}}" range="{{sex}}">
           <text class="gg">{{sex[index2]}}</text>
    </picker>
    </view>

    <view class="inputitem">
    <text class="inputinfo" confirm-type="next">手机：</text>
    <input type="number" class="inputs" placeholder="请输入手机" placeholder-class="holder"/>
    </view>

    <view class="inputitem">
    <text class="inputinfo" confirm-type="next">邮箱：</text>
    <input type="text" class="inputs" placeholder="请输入邮箱" placeholder-class="holder"/>
    </view>

    <view class="pickeritem inputitem">
   <text class="inputinfo">部门：</text>
    <picker class="picker" bindchange="bindPickerChange" value="{{index}}" range="{{departmentArr}}">
           <text class="gg">{{departmentArr[index]}}</text>
    </picker>
    </view>
    </view>

    <button type="primary" bindtap="sendInfo">
        确认报名
    </button>
</view>
